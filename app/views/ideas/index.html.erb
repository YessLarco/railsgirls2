<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Show', idea, class: 'btn btn-primary btn-lg active'%></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), class: 'btn btn-primary btn-lg active' %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-lg active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

